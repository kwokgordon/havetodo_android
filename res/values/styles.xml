<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="IncompleteTaskCheckBoxView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/TaskMinHeight</item>
        <item name="android:background">@color/body_background</item>
        <item name="android:textSize">@dimen/TaskTextSize</item>
        <item name="android:textColor">@color/IncompleteTaskTextColor</item>
    </style>
    
    <style name="CompletedTaskCheckBoxView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/TaskMinHeight</item>
        <item name="android:background">@color/body_background</item>
        <item name="android:textSize">@dimen/TaskTextSize</item>
        <item name="android:textColor">@color/CompletedTaskTextColor</item>
    </style>
    
    <style name="CompletedHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#888888</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/HeaderTextSize</item>
    </style>
        
    
</resources>
